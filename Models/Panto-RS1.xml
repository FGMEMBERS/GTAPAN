<PropertyList>
 <nasal>
  <load>
    <!--
      ##############################################################################
      # The on-load Nasal is not executed when this file is loaded as the user
      # aircraft. The code is only executed if the file is loaded for a remote
      # aircraft in Multi-Player mode (MP)
      ##############################################################################
    -->
    <![CDATA[
      var livery_update = aircraft.livery_update.new("Aircraft/Panto-RS1/Models/Liveries");
    ]]>
    </load>
  
  <unload><![CDATA[
    livery_update.stop();
  ]]></unload>
</nasal>
<path>Panto-RS1.ac</path>
<!-- ========== Effects ========= -->
<effect>
 <inherits-from>Effects/model-transparent</inherits-from>
 <object-name>Panto-RS1-Window</object-name>
<object-name>D3</object-name>
</effect>
<animation>
  <type>material</type>
  <object-name>Panto-RS1-Body</object-name>
<object-name>D1</object-name>
  <property-base>sim/model/livery</property-base>
  <texture-prop>texture</texture-prop>
  <texture>Liveries/Panto-RS1-Body.png</texture>
</animation>
<animation>
  <object-name>FrontWheel</object-name>
  <type>rotate</type>
  <property>controls/flight/aileron</property>
  <factor>-4</factor>
  <offset-deg>0</offset-deg>
  <center>
   <x-m> -1.6871 </x-m>
   <y-m> 0.0   </y-m>
   <z-m> 0.44808 </z-m>
  </center>
  <axis>
   <x>0</x>
   <y>0</y>
   <z>1</z>
  </axis>
 </animation>
 <animation>
  <type>spin</type>
  <object-name>FrontWheel</object-name>
  <property>gear/gear[0]/rollspeed-ms</property>
  <factor>10</factor>
  <center>
   <x-m> -1.6871 </x-m>
   <y-m> 0.0   </y-m>
   <z-m> 0.44808 </z-m>
  </center>
  <axis>
	<x>0.0</x>
   <y>-1.0</y>
   <z>0.0</z>
  </axis>
 </animation>
<animation>
  <type>spin</type>
  <object-name>BackWheel</object-name>
  <property>gear/gear[2]/rollspeed-ms</property>
  <factor>5</factor>
  <center>
   <x-m> 1.26055 </x-m>
   <y-m> 0.0   </y-m>
   <z-m> 0.44808 </z-m>
  </center>
  <axis>
   <x>0.0</x>
   <y>-1.0</y>
   <z>0.0</z>
  </axis>
 </animation>
<animation>
  <object-name>Steering</object-name>
  <type>rotate</type>
  <property>controls/flight/aileron</property>
<factor>80</factor>
  <offset-deg>0</offset-deg>
  <center>
   <x-m> -0.38582 </x-m>
   <y-m> -0.46522  </y-m>
   <z-m> 1.45196 </z-m>
  </center>
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>
<animation>
 <object-name>Panto-RS1-Brake</object-name>
<condition>		
  <less-than-equals>		
   <property>velocities/groundspeed-kt</property>
   <value>1</value>
  </less-than-equals>
 </condition>
 <type>material</type>
 <emission>
  <red>4.0</red>
  <green>0.0</green>
  <blue>0.0</blue>
 </emission>
</animation>
<animation>
<type>pick</type>
<object-name>D2</object-name>
<visible>true</visible>
<action>
<button>0</button>
<repeatable>false</repeatable>
<binding>
<command>nasal</command>
<script>aucafly.door.toggle();</script>
</binding>
</action>
<hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>door</tooltip-id>
                <label>Door Open/Close</label>
            </binding>
        </hovered>

</animation>

<animation>
<type>rotate</type>
<object-name>D1</object-name>
<object-name>D2</object-name>
<object-name>D3</object-name>
<property>sim/multiplay/generic/float[0]</property>
<factor>-40</factor>
<center>
<x-m>-1.16108</x-m>
<y-m>-1.0184</y-m>
<z-m>1.05846</z-m>
</center>
<axis>
<x>0</x>
<y>0</y>
<z>1</z>
</axis>
</animation>
